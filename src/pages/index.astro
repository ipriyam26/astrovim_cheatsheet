  }

  .grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2em;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 2em;
  }

  th, td {
    border: 1px solid var(--current-line);
    padding: 0.5em;
  }

  th {
    background-color: var(--current-line);
    color: var(--foreground);
  }

  tr:nth-child(even) {
    background-color: var(--current-line);
  }

h2,a {
    color: var(--cyan);
  }

